{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('uploads/' ~ produit.photo) }}"></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
        </tbody>
    </table>
    {# Si on est admin on pourra modifier ou supprimer le produit #}
    {% if is_granted('ROLE_ADMIN')%} 
    <a href="{{ path('produit_edit', {'id': produit.id}) }}">{{'produit.modifier'|trans}}</a>
    {{ include('produit/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
